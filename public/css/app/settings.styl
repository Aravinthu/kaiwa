@import '../_variables'
@import '../_mixins'

.main > div
  padding: 20px
  border-bottom: 1px solid $grayOutline

  .status
    padding: 10px

  &:last-of-type
    border: none

.uploadRegion
  padding: 15px
  font-size: $fontSmall
  roundall(3px)
  margin: 10px 0
  color: $textSecondary
  background: $grayBackground

  p
    margin: 0

  input
    width: 100%
    padding: 5px
    borderbox()

  img
    margin: 10px 0
