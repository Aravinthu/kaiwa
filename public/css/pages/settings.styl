@import '../_variables'
@import '../_mixins'

// Settings
.main

  h1
    padding: 34px 20px 0 20px
    color: $blue-saturated

  > div
    padding: 20px
    border-bottom: 1px solid $gray-lighter
    h4
      color: $blue-saturated

    &:last-of-type
      border: none

    .status
      overflow: hidden
      min-height: 35px
      max-height: 50px
      height: auto

    .installFirefox, .soundNotifs
      margin-left: 5px

.uploadRegion
  padding: 15px
  roundall(3px)
  margin: 10px 0
  border: 1px solid $gray-lighter
  background: lighten($gray-lighter, 80%)

  p
    margin: 0

  img
    margin: 10px 0
